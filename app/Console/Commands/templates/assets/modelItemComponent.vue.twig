		methods: {
			fetchData() {
				this.{{ camelCaseModelClassName }} = null;

				var propsData = this.$options.propsData;
				this.{{ camelCaseModelClassName }} = {
					id: propsData.{{ camelCaseModelClassName }}Id
				}

				this.$emit('routeTitleDataUpdate', this.{{ camelCaseModelClassName }});
			},
		}
	}
</script>